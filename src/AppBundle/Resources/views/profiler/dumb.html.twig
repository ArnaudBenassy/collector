{% extends '@WebProfiler/Profiler/layout.html.twig' %}

{% block toolbar %}
    {% set icon %}
        {{ include('@WebProfiler/Icon/search.svg') }}
        <span class="sf-toolbar-value">Dumb</span>
    {% endset %}

    {% set text %}
        <div class="sf-toolbar-info-piece">
            <b>Total letters</b>
            <span class="sf-toolbar-status sf-toolbar-status-normal">
                {{ collector.globalCount }}
            </span>
        </div>
    {% endset %}

    {{ include('@WebProfiler/Profiler/toolbar_item.html.twig', { link: profiler_url }) }}
{% endblock %}

{% block menu %}
    <span class="label label-status-normal">
        <span class="icon">{{ include('@WebProfiler/Icon/search.svg') }}</span>
        <strong>Dumb</strong>
        <span class="count">
            <span>{{ collector.globalCount }}</span>
        </span>
    </span>
{% endblock %}

{% block panel %}
    <h2>Dumb</h2>
    <div class="metrics">
        <div class="metric">
            <span class="value">{{ collector.globalCount }}</span>
            <span class="label">letters</span>
        </div>
    </div>

    <table>
        <thead>
            <tr>
                <th>Count</th>
                <th>Letter</th>
            </tr>
        </thead>
        {% for letter, count in collector.getLetters %}
            <tbody>
                <tr>
                    <th>{{ letter }}</th>
                    <td>{{ count }}</td>
                </tr>
            </tbody>
        {% endfor %}
    </table>
{% endblock %}